<script type="text/javascript">
	function vadilate(frm) {
		let fname=frm.name.value;
		let fage=frm.age.value;
		
		if(fname==""){
			alert("Please enter the name");
			return false;
		}
		else if(fage==""){
			alert("Please enter the age");
			return false;
		}
		else if (isNaN(fage)) {
			alert("Age should be numeric");
			return false;
		}
		else if(fage<=0||fage>125){
			alert("Age should be in the range of 1 to 125");
		}
	}

</script>
